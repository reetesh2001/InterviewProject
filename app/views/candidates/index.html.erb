<%= form_with url: import_user_candidates_path(@user), local: true, multipart: true do |form| %>
  <div class="form-group">
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>
  <%= form.submit "Import Candidates" %>
<% end %>

<table>
  <thead style="width: 100%;">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Role</th>
      <th>Qualification</th>
      <th>College</th>
      <th>Experience</th>
      <th>Company</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.name %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.phone %></td>
        <td><%= candidate.role %></td>
        <td><%= candidate.user_id %></td>
        <td><%= candidate.qualification %></td>
        <td><%= candidate.college %></td>
        <td><%= candidate.experience %></td>
        <td><%= candidate.company %></td>
        <td>
          <%= button_to 'Delete', user_candidate_path(@user, candidate), method: :delete, data: { confirm: 'Are you sure?' },class: "delete" %>
        </td>
        <td>
          <%= link_to 'Edit', edit_user_candidate_path(@user,candidate),class: "edit" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
